<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout
        pattern="%d{HH:mm:ss.SSS} [%X{actor-name}] [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>

  <Loggers>
    <Logger name="io.zeebe" level="DEBUG" />
    <Logger name="io.zeebe.e2e.util.containers.DockerClusterRule.brokers" level="WARN" />
    <Logger name="io.zeebe.e2e.util.containers.DockerClusterRule.gateway" level="WARN" />
    <Logger name="io.zeebe.e2e.util.containers.DockerElasticStreamableClusterRule.elastic" level="WARN" />

    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>

</Configuration>
